<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightBlue"
    tools:context=".ui.MainActivity">



    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progress="25"
        android:visibility="gone"
        android:layout_centerInParent="true"/>

    <ScrollView
        android:id="@+id/svScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:visibility="visible"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bcillogo"
                    android:layout_gravity="center"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_20sdp"
                    android:text="VisitorApp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_gravity="center"/>
            </LinearLayout>
            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/etCName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:hint="@string/company_name"
                android:text=""
                android:textSize="@dimen/_16sdp"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:ellipsize="end"
                android:lines="1"
                android:inputType="text"
                android:layout_gravity="end"
                app:met_floatingLabel="highlight" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="1"
                android:orientation="horizontal">
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/etName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:hint="@string/your_name"
                    android:text=""
                    android:textSize="@dimen/_16sdp"
                    android:maxLines="1"
                    android:layout_weight="1"
                    android:scrollHorizontally="true"
                    android:ellipsize="end"
                    android:lines="1"
                    android:inputType="text"
                    android:layout_gravity="end"
                    app:met_floatingLabel="highlight" />
                <Button
                    android:id="@+id/btCapture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Capture Photo"
                    android:layout_weight="1"
                    />
            </LinearLayout>


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/etDesgn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:hint="@string/desgn"
                android:text=""
                android:textSize="@dimen/_16sdp"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:ellipsize="end"
                android:lines="1"
                android:inputType="text"
                android:layout_gravity="end"
                app:met_floatingLabel="highlight" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/etLoc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:hint="@string/loc"
                android:text=""
                android:textSize="@dimen/_16sdp"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:ellipsize="end"
                android:lines="1"
                android:inputType="text"
                android:layout_gravity="end"
                app:met_floatingLabel="highlight" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:hint="@string/email_id"
                android:inputType="textEmailAddress"
                android:text=""
                android:textSize="@dimen/_16sdp"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:ellipsize="end"
                android:lines="1"
                android:layout_gravity="end"
                app:met_floatingLabel="highlight" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/etMobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:hint="@string/mobile_number"
                android:inputType="number"
                android:text=""
                android:textSize="@dimen/_16sdp"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:ellipsize="end"
                android:lines="1"
                android:layout_gravity="end"
                app:met_floatingLabel="highlight" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/etReq"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:gravity="top|left"
                android:hint="@string/solution_required"
                android:inputType="textMultiLine"
                android:lines="8"
                android:maxLines="10"
                android:minLines="4"
                android:scrollbars="vertical"
                android:text=""
                android:textSize="@dimen/_16sdp"
                app:met_floatingLabel="highlight" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/etConnect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:gravity="top|left"
                android:hint="@string/time_to_connect"
                android:inputType="textMultiLine"
                android:lines="8"
                android:maxLines="10"
                android:minLines="4"
                android:scrollbars="vertical"
                android:textSize="@dimen/_16sdp"
                app:met_floatingLabel="highlight" />

            <LinearLayout
                android:id="@+id/llContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btSave"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_style_save"
                    android:text="@string/save"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_18sdp"
                    android:textStyle="bold" />
                <Button
                    android:id="@+id/btDownload"
                    android:layout_width="@dimen/_110sdp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_style_save"
                    android:text="View Report"
                    android:textAllCaps="false"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/_18sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textStyle="bold" />


            </LinearLayout>
            <Button
                android:id="@+id/btClear"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/cardview_style_red"
                android:text="@string/clear"
                android:textAllCaps="false"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/_18sdp"
                android:textStyle="bold" />
        </LinearLayout>


    </ScrollView>
</RelativeLayout>
